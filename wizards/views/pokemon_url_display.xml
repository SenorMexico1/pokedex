<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Pokemon Form Display Updates -->
        <record model="ir.ui.view" id="pokemon_form_display_update">
            <field name="name">pokemon.form.display.update</field>
            <field name="model">pokedex.pokemon</field>
            <field name="inherit_id" ref="pokedex_pokemon_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='image_url' and @widget='pokedex_image']" position="attributes">
                    <attribute name="widget">image</attribute>
                    <attribute name="class">pokemon-image oe_avatar</attribute>
                </xpath>
            </field>
        </record>
        
        <!-- Trainer Pokemon Display Updates -->
        <record model="ir.ui.view" id="trainer_pokemon_display_update">
            <field name="name">trainer.pokemon.display.update</field>
            <field name="model">pokedex.trainer.pokemon</field>
            <field name="inherit_id" ref="pokedex_trainer_pokemon_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='image_url' and @widget='pokedex_image']" position="attributes">
                    <attribute name="widget">image</attribute>
                    <attribute name="class">pokemon-image oe_avatar</attribute>
                </xpath>
                <!-- Remove manual level adjustment button -->
                <xpath expr="//button[@name='level_up']" position="replace"/>
            </field>
        </record>
        
        <!-- Catch Wizard Display Updates -->
        <record model="ir.ui.view" id="catch_wizard_display_update">
            <field name="name">catch.wizard.display.update</field>
            <field name="model">pokedex.catch.wizard</field>
            <field name="inherit_id" ref="pokedex_catch_wizard_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='pokemon_image' and @widget='image']" position="attributes">
                    <attribute name="class">pokemon-image oe_avatar</attribute>
                    <attribute name="options">{'size': [300, 300]}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>