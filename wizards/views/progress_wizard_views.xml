<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Progress Wizard Form View -->
        <record id="pokedex_import_progress_wizard_form" model="ir.ui.view">
            <field name="name">pokedex.import.progress.wizard.form</field>
            <field name="model">pokedex.import.progress.wizard</field>
            <field name="arch" type="xml">
                <form string="Pokemon Import Progress">
                    <sheet>
                        <!-- Progress Bar -->
                        <group>
                            <field name="progress_percentage" widget="progressbar" nolabel="1"/>
                        </group>
                        
                        <!-- Status Information -->
                        <group col="4">
                            <field name="total_to_import" readonly="1"/>
                            <field name="imported_count" readonly="1" 
                                   decoration-success="imported_count > 0"/>
                            <field name="failed_count" readonly="1" 
                                   decoration-danger="failed_count > 0"/>
                            <field name="current_pokemon" readonly="1" nolabel="1" colspan="4"
                                   attrs="{'invisible': [('is_complete', '=', True)]}"/>
                        </group>
                        
                        <!-- Import Log -->
                        <separator string="Import Log"/>
                        <field name="log_text" readonly="1" nolabel="1" 
                               style="height: 300px; font-family: monospace; background-color: #f5f5f5;"/>
                        
                        <field name="is_complete" invisible="1"/>
                    </sheet>
                    
                    <footer>
                        <button name="start_import" 
                                string="Start Import" 
                                type="object" 
                                class="btn-primary"
                                attrs="{'invisible': ['|', ('total_to_import', '>', 0), ('is_complete', '=', True)]}"/>
                        <button name="action_close" 
                                string="Close" 
                                type="object" 
                                class="btn-primary"
                                attrs="{'invisible': [('is_complete', '=', False)]}"/>
                        <button string="Cancel" 
                                class="btn-secondary" 
                                special="cancel"
                                attrs="{'invisible': [('is_complete', '=', True)]}"/>
                    </footer>
                </form>
            </field>
        </record>
        
        <!-- Action to open the progress wizard -->
        <record id="pokedex_import_progress_wizard_action" model="ir.actions.act_window">
            <field name="name">Import Pokemon with Progress</field>
            <field name="res_model">pokedex.import.progress.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>